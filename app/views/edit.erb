<form action='/articles/<%=@article.id %>' method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <p>Title: <input id="title" type="text" name="article[title]" value="<%= @article.title %>" /></p>
        
        <p>Content: <textarea id="content" type="text" name="article[content]"  value="<%= @article.content %>"></textarea></p>
        <input type="submit" id="Submit"/>
</form>


